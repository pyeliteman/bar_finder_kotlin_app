<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:layout_marginRight="2dp"
                android:id="@+id/iv_price_level1"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_weight="0"
                android:src="@mipmap/icn_place_price_active_white"
                android:textColor="@color/colorWhite"
                android:textSize="15sp" />

            <ImageView
                android:layout_marginRight="2dp"

                android:id="@+id/iv_price_level2"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_weight="0"
                android:src="@mipmap/icn_place_price_active_white"
                android:textColor="@color/colorWhite"
                android:textSize="15sp" />

            <ImageView
                android:layout_marginRight="2dp"

                android:id="@+id/iv_price_level3"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_weight="0"
                android:src="@mipmap/icn_place_price_active_white"
                android:textColor="@color/colorWhite"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_price_level4"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_weight="0"
                android:src="@mipmap/icn_place_price_active_white"
                android:textColor="@color/colorWhite"
                android:textSize="15sp" />
        </LinearLayout>


        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_check_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_checkbox_empty" />
    </LinearLayout>

    <View
        android:id="@+id/icon_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorDividerWhite" />
</LinearLayout>